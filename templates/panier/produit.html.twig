{% extends 'base.html.twig' %}

{% block title %}Hello PanierController!{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <H1>Liste des produits</H1>
        <table class="table table-striped">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Photo</th>
                    <th scope="col">Nom</th>
                    <th scope="col">Quantit√©</th>
                    <th scope="col">Prix</th>
                </tr>
            </thead>
            <tbody>
                {% for produit in produits %}
                <tr>
                    <td><img src="{{ asset('upload/images/' ~ produit.photo)}}" class="img-thumbnail"
                            style="width:100px;" alt="{{produit.nom}}"></td>
                    <td><a href="{{path('singleProduit',{id:produit.id})}}">{{produit.nom}}</a></td>
                    <td>{{produit.quantite}}</td>
                    <td>{{produit.prix}}</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    
    <div class="row">
        <div class="col">
            <h1>Ajouter un produit</h1>
            {{form_start(formProduit)}}
            {{form_end(formProduit)}}
        </div>
    </div>
</div>
{% endblock %}